    </android.support.constraint.ConstraintLayout>

    <!--Fragment Expanded-->
    <android.support.constraint.ConstraintLayout
        android:id="@+id/rl_player_fragment_expanded"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <!--<TextView-->
        <!--android:id="@+id/tv_player_fragment_open"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="Player Fragment (state = EXPANDED)"-->
        <!--android:textColor="@android:color/white"/>-->

        <ImageButton
            android:id="@+id/ib_player_fragment_expand_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:padding="@dimen/player_fragment_padding"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/ic_player_like" />

        <ImageButton
            android:id="@+id/ib_player_fragment_expand_dislike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:padding="@dimen/player_fragment_padding"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/ib_player_fragment_expand_like"
            app:srcCompat="@drawable/ic_player_dislike" />

        <android.support.constraint.ConstraintLayout
            android:id="@+id/cl_player_fragment_expand_play_pause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/ib_player_fragment_expand_skip">

            <ImageButton
                android:id="@+id/ib_player_fragment_expand_play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:padding="@dimen/player_fragment_padding"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/ic_player_play" />

            <ImageButton
                android:id="@+id/ib_player_fragment_expand_pause"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:padding="@dimen/player_fragment_padding"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/ic_player_pause" />

        </android.support.constraint.ConstraintLayout>

        <ImageButton
            android:id="@+id/ib_player_fragment_expand_skip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:padding="@dimen/player_fragment_padding"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/ic_player_skip" />

        <TextView
            android:id="@+id/tv_player_fragment_expand_speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/player_fragment_padding"
            android:text="2.5X"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/cl_player_fragment_expand_play_pause"
            app:layout_constraintStart_toEndOf="@id/ib_player_fragment_expand_dislike"
            app:layout_constraintTop_toTopOf="@id/ib_player_fragment_expand_dislike" />

        <android.support.v7.widget.AppCompatSeekBar
            android:id="@+id/sb_player_fragment_expand_seek"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="@dimen/player_fragment_padding"
            android:progressTint="@android:color/white"
            android:thumbTint="@android:color/white"
            app:layout_constraintBottom_toTopOf="@id/ib_player_fragment_expand_like"
            app:layout_constraintEnd_toStartOf="@id/tv_player_fragment_expand_time_remaining"
            app:layout_constraintStart_toEndOf="@id/tv_player_fragment_expand_time_elapsed" />

        <TextView
            android:id="@+id/tv_player_fragment_expand_time_elapsed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:text="00:00:00"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/sb_player_fragment_expand_seek"
            app:layout_constraintBottom_toBottomOf="@id/sb_player_fragment_expand_seek"
            android:paddingStart="@dimen/player_fragment_padding"/>

        <TextView
            android:id="@+id/tv_player_fragment_expand_time_remaining"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:text="00:00:00"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/sb_player_fragment_expand_seek"
            app:layout_constraintBottom_toBottomOf="@id/sb_player_fragment_expand_seek"
            android:paddingEnd="@dimen/player_fragment_padding"/>

        <TextView
            android:id="@+id/tv_player_fragment_expand_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_player_fragment_expand_cover"
            app:layout_constraintBottom_toTopOf="@id/tv_player_fragment_expand_description"
            android:gravity="center"
            android:textStyle="bold"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@android:color/white"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:text="This is the podcast title."
            android:paddingTop="@dimen/player_fragment_padding"
            android:paddingStart="@dimen/player_fragment_padding"
            android:paddingEnd="@dimen/player_fragment_padding"/>

        <TextView
            android:id="@+id/tv_player_fragment_expand_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_player_fragment_expand_title"
            app:layout_constraintBottom_toTopOf="@id/sb_player_fragment_expand_seek"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@android:color/white"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:scrollHorizontally="true"
            android:text="This is a description of the podcast that is playing in this player."
            android:padding="@dimen/player_fragment_padding"/>

        <ImageView
            android:id="@+id/iv_player_fragment_expand_cover"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:paddingTop="@dimen/player_fragment_cover_padding"
            android:paddingStart="@dimen/player_fragment_cover_padding"
            android:paddingEnd="@dimen/player_fragment_cover_padding"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tv_player_fragment_expand_title"
            app:srcCompat="@drawable/ic_launcher_background" />

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>