<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent">

    <!--Fragment Collapsed-->
    <android.support.constraint.ConstraintLayout
        android:id="@+id/rl_player_fragment_collapsed"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/iv_player_fragment_collapse_cover"
            android:layout_width="@dimen/player_fragment_cover"
            android:layout_height="@dimen/player_fragment_cover"
            app:srcCompat="@drawable/ic_launcher_background"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:padding="@dimen/player_fragment_padding"/>

        <TextView
            android:id="@+id/tv_player_fragment_collapse_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/iv_player_fragment_collapse_cover"
            app:layout_constraintEnd_toStartOf="@id/cl_fragment_collapse_play_pause"
            app:layout_constraintTop_toTopOf="@id/iv_player_fragment_collapse_cover"
            android:paddingTop="@dimen/player_fragment_padding"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:text="This is the podcast title."/>

        <TextView
            android:id="@+id/tv_player_fragment_collapse_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/iv_player_fragment_collapse_cover"
            app:layout_constraintEnd_toStartOf="@id/cl_fragment_collapse_play_pause"
            app:layout_constraintTop_toBottomOf="@id/tv_player_fragment_collapse_title"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:text="This is a description of the podcast that is playing in this player."/>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/cl_fragment_collapse_play_pause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="@id/ib_player_fragment_collapse_skip"
            app:layout_constraintTop_toTopOf="@id/iv_player_fragment_collapse_cover">

            <ImageButton
                android:id="@+id/ib_player_fragment_collapse_play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:background="@android:color/transparent"
                app:srcCompat="@drawable/ic_player_play"
                android:padding="@dimen/player_fragment_padding"/>

            <ImageButton
                android:id="@+id/ib_player_fragment_collapse_pause"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:background="@android:color/transparent"
                app:srcCompat="@drawable/ic_player_pause"
                android:padding="@dimen/player_fragment_padding"/>

        </android.support.constraint.ConstraintLayout>



        <ImageButton
            android:id="@+id/ib_player_fragment_collapse_skip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/iv_player_fragment_collapse_cover"
            android:scaleType="fitXY"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/ic_player_skip"
            android:padding="@dimen/player_fragment_padding"/>

