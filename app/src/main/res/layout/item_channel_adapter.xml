<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/channels_fragment_cardview_margin"
    android:layout_marginBottom="@dimen/channels_fragment_cardview_margin"
    android:layout_marginLeft="@dimen/channels_fragment_recyclerview_margin"
    android:layout_marginRight="@dimen/channels_fragment_recyclerview_margin"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView_album"
            android:layout_width="@dimen/channels_fragment_image_size"
            android:layout_height="@dimen/channels_fragment_image_size"
            android:contentDescription="@string/description"
            app:srcCompat="@drawable/ic_launcher_background"/>

        <TextView
            android:id="@+id/textView_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title"
            android:maxLines="3"
            android:paddingStart="@dimen/channels_fragment_title_padding"
            android:paddingTop="@dimen/channels_fragment_title_padding"/>

    </LinearLayout>

</android.support.v7.widget.CardView>

